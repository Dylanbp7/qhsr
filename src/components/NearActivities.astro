---

interface Props {
  title: string;
  description: string;
  url: string;
  ctaUrl: string;
}

const { title } = Astro.props;
const { description } = Astro.props;

import AllActivities from '../config/activities.json'

---
<section class="bg-white dark:bg-gray-900">
    <div class="pt-8 px-4 mx-auto max-w-screen-xl lg:py-24 lg:px-6">
        <div class="max-w-screen-lg text-gray-500 sm:text-lg dark:text-gray-400">
            <h2 class="text-4xl tracking-tight font-bold text-gray-900 dark:text-white">{title}</h2>
            <p class="mb-4 font-light">{description}</p>
        </div>
        <div class="flex flex-col flex-wrap justify-between md:flex-row gap-10 pt-4">
            {AllActivities.filter((activity) => activity.location != "San Rafael").map((activities) => (
                <div class="max-w-96 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
                <a href={activities.url}>
                    <img src={activities.image} class="rounded-t-lg w-full" alt={activities.Altimage}>
                </a>
                <div class="w-full h-auto px-5 py-5">
                    <div class="inline-flex justify-center items-center">
                        <div class="inline-flex items-center bg-gray-100 me-2 px-2.5 py-0.5 rounded-full dark:bg-gray-700">
                            <svg class="w-4 h-4 mr-1 text-yellow-300" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 22 20">
                            <path d="M20.924 7.625a1.523 1.523 0 0 0-1.238-1.044l-5.051-.734-2.259-4.577a1.534 1.534 0 0 0-2.752 0L7.365 5.847l-5.051.734A1.535 1.535 0 0 0 1.463 9.2l3.656 3.563-.863 5.031a1.532 1.532 0 0 0 2.226 1.616L11 17.033l4.518 2.375a1.534 1.534 0 0 0 2.226-1.617l-.863-5.03L20.537 9.2a1.523 1.523 0 0 0 .387-1.575Z"/>
                            </svg>
                            <p class="text-gray-800 text-xs font-medium mr-1 dark:text-gray-300">{activities.rating} -</p>
                            <a href={activities.url}><p class="text-gray-900 text-xs font-medium underline dark:text-gray-300">{activities.ratingComment}</p></a>
                        </div>
                    </div>
                    <a href={activities.url}>
                        <h3 class="text-2xl mt-2 font-semibold tracking-tight text-gray-900 dark:text-white">{activities.title}</h3>
                        <p class="my-2 text-sm font-medium text-gray-500 dark:text-gray-400">{activities.description}</p>
                        <div>
                            <span class="text-40 font-normal mb-2 text-gray-900 dark:text-gray-200">Desde $</span>
                            <span class="text-40 font-normal mb-2 text-gray-900 dark:text-gray-200">{activities.price}</span>
                            <span class="text-40 font-normal mb-2 text-gray-900 dark:text-gray-200">por persona</span>
                        </div>
                    </a>
                    <div class="flex items-center justify-end mt-4">
                        <a href={activities.url} class="text-white w-full md:w-auto bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Más información</a>
                    </div>
            </div>
        </div>
            ))
        }
        </div>
    </div>
    <div>
    </div>
</section>