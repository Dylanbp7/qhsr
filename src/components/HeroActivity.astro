---
interface Props {
    activityImage: any;
    activityAltImage: any;
    activityImage2: any;
    activityAltImage2: any;
    activityImage3: any;
    activityAltImage3: any;
    activityImage4: any;
    activityAltImage4: any;
    activityImage5: any;
    activityAltImage5: any;
    activityImage6: any;
    activityAltImage6: any;
    activityRating: any;
    activityRatingComment: any;
    activityUrl: any;
    activityTitle: any;
    activityLongDescription: any;
    activityPrice: any;
    activityUrlBuy: any;
}

const { activityImage } = Astro.props;
const { activityAltImage } = Astro.props;
const { activityImage2 } = Astro.props;
const { activityAltImage2 } = Astro.props;
const { activityImage3 } = Astro.props;
const { activityAltImage3 } = Astro.props;
const { activityImage4 } = Astro.props;
const { activityAltImage4 } = Astro.props;
const { activityImage5 } = Astro.props;
const { activityAltImage5 } = Astro.props;
const { activityImage6 } = Astro.props;
const { activityAltImage6 } = Astro.props;
const { activityRating } = Astro.props;
const { activityRatingComment } = Astro.props;
const { activityUrl } = Astro.props;
const { activityTitle } = Astro.props;
const { activityLongDescription } = Astro.props;
const { activityPrice } = Astro.props;
const { activityUrlBuy } = Astro.props;


---
<section class="bg-white dark:bg-gray-900">
    <div class="gap-10 items-center pt-24 px-4 mx-auto max-w-screen-xl xl:gap-16 lg:px-6">
        <div class="grid grid-cols-1 lg:grid-cols-2 lg:gap-10 lg:py-10">
            <div class="grid gap-4">
                <div class="relative">
                    <img class="h-auto w-screen rounded-lg" src={activityImage} alt={activityAltImage}>
                    <button data-modal-target="static-modal" data-modal-toggle="static-modal" class="lg:hidden absolute top-0 right-0 text-gray-900 bg-white border border-gray-300 focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-100 font-medium rounded-lg text-sm px-5 py-2.5 my-2 mx-2 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700 dark:hover:border-gray-600 dark:focus:ring-gray-700" type="button">+</button>
                    <!-- Main modal -->
                    <div id="static-modal" data-modal-backdrop="static" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
                        <div class="relative p-4 w-full max-w-2xl max-h-full">
                            <!-- Modal content -->
                            <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
                                <!-- Modal header -->
                                <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t dark:border-gray-600">
                                    <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white" data-modal-hide="static-modal">
                                        <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
                                        </svg>
                                        <span class="sr-only">Close modal</span>
                                    </button>
                                </div>
                                <!-- Modal body -->
                                <div class="p-4 md:p-5 space-y-4">
                                <div>
                                    <img class="h-auto max-w-full rounded-lg" src={activityImage2} alt={activityAltImage2}>
                                </div>
                                <div>
                                    <img class="h-auto max-w-full rounded-lg" src={activityImage3} alt={activityAltImage3}>
                                </div>
                                <div>
                                    <img class="h-auto max-w-full rounded-lg" src={activityImage4} alt={activityAltImage4}>
                                </div>
                                <div>
                                    <img class="h-auto max-w-full rounded-lg" src={activityImage5} alt={activityAltImage5}>
                                </div>
                                <div>
                                    <img class="h-auto max-w-full rounded-lg" src={activityImage6} alt={activityAltImage6}>
                                </div>
                                </div>
                                <div class="flex items-center p-4 md:p-5 border-gray-200 rounded-b dark:border-gray-600">
                                    <button data-modal-hide="static-modal" type="button" class="w-full text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Volver</button>                                            
                                </div>
                            </div>
                        </div>
                    </div>          
                </div>
                <div class="grid grid-cols-5 gap-4">
                    <div>
                        <img class="h-auto max-w-full rounded-lg" src={activityImage2} alt={activityAltImage2}>
                    </div>
                    <div>
                        <img class="h-auto max-w-full rounded-lg" src={activityImage3} alt={activityAltImage3}>
                    </div>
                    <div>
                        <img class="h-auto max-w-full rounded-lg" src={activityImage4} alt={activityAltImage4}>
                    </div>
                    <div>
                        <img class="h-auto max-w-full rounded-lg" src={activityImage5} alt={activityAltImage5}>
                    </div>
                    <div>
                        <img class="h-auto max-w-full rounded-lg" src={activityImage6} alt={activityAltImage6}>
                    </div>
                </div>
            </div>
            <div class="flex flex-col items-start justify-center h-auto py-5">
            <div class="inline-flex justify-center items-center">
                <div class="inline-flex items-center bg-gray-100 me-2 px-2.5 py-0.5 rounded-full dark:bg-gray-700">
                    <svg class="w-4 h-4 mr-1 text-yellow-300" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 22 20">
                    <path d="M20.924 7.625a1.523 1.523 0 0 0-1.238-1.044l-5.051-.734-2.259-4.577a1.534 1.534 0 0 0-2.752 0L7.365 5.847l-5.051.734A1.535 1.535 0 0 0 1.463 9.2l3.656 3.563-.863 5.031a1.532 1.532 0 0 0 2.226 1.616L11 17.033l4.518 2.375a1.534 1.534 0 0 0 2.226-1.617l-.863-5.03L20.537 9.2a1.523 1.523 0 0 0 .387-1.575Z"/>
                    </svg>
                    <p class="text-gray-800 text-xs font-medium mr-1 dark:text-gray-300">{activityRating} -</p>
                    <p class="text-gray-900 text-xs font-medium dark:text-gray-300">{activityRatingComment}</p>
                </div>
            </div>
            <h1 class="text-4xl lg:text-5xl mt-2 font-semibold tracking-tight text-gray-900 dark:text-white">{activityTitle}</h1>
            <p class="my-2 text-md font-medium text-gray-500 dark:text-gray-400">{activityLongDescription}</p>
            <div>
                <span class="text-2xl font-normal mb-2 text-gray-500 dark:text-gray-200">Desde $</span>
                <span class="text-2xl font-normal mb-2 text-gray-500 dark:text-gray-200">{activityPrice}</span>
                <span class="text-lg text- font-normal mb-2 text-gray-800 dark:text-gray-200">por persona</span>
            </div>
            <div class="flex items-center justify-end mt-4">
                <a href={activityUrlBuy} class="text-white w-full md:w-auto bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Ir a reservar</a>
            </div>
            </div>
        </div>          
    </div>
</section>

