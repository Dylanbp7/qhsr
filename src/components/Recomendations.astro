---
import recomendation from "../config/recomendations.json";
---
<section class="bg-gray-900">
    <div class="gap-10 items-center pt-24 px-4 mx-auto max-w-screen-xl xl:gap-16 lg:px-6">
        {recomendation.map((recomendation) => (
            <div class="grid grid-cols-1 md:grid-cols-2 gap-10 justify-between w-full w-screen-xl pb-24">
                <img class=" h-auto md:h-96 w- rounded-md" src={recomendation.img} alt={recomendation.imgAlt} />
                <div class="mt-4 flex flex-col w-full justify-center items-start">
                    <h2 class="mb-4 text-4xl tracking-tight font-extrabold text-white">{recomendation.title}</h2>
                    <p class="mb-6 font-light md:text-lg text-gray-400">{recomendation.description}</p>
                    <a href={recomendation.url} class="inline-flex items-center text-white bg-primary-700 hover:bg-primary-800 focus:ring-4 font-medium rounded-lg text-sm px-5 py-2.5 text-center focus:ring-primary-900">{recomendation.ctaUrl}<svg class="ml-2 -mr-1 w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
                    </a>
                </div>
            </div>
        ))}
    </div>
</section>