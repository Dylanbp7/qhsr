---
interface Props {
  title: string;
  description: string;
}

const { title } = Astro.props;
const { description } = Astro.props;
---
<section class="bg-center bg-cover bg-[url(https://media.diariouno.com.ar/p/0fbfd9a8190b68f52ccece092dbd0fd5/adjuntos/298/imagenes/009/005/0009005166/1200x0/smart/canon-del-atueljpg.jpg)] bg-gray-700 bg-blend-multiply mt-16">
    <div class=" flex flex-col items-center px-4 mx-auto max-w-screen-xl text-center py-16">
        <h1 class="mb-4 text-[2rem] max-w-3xl font-extrabold tracking-tight leading-none text-white md:text-2xl lg:text-6xl">{title}</h1>
        <p class="mb-8 text-lg font-normal text-gray-300 lg:text-80 sm:px-16 lg:px-48">{description}</p>
    </div>
</section>