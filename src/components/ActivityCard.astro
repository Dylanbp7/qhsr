---
interface Props {
    url: string;
    image: string;
    Altimage: string;
    rating: string;
    ratingComment: string;
    title: string;
    description: string;
    price: string;
}

const { url } = Astro.props;
const { image } = Astro.props;
const { Altimage } = Astro.props;
const { rating } = Astro.props;
const { ratingComment } = Astro.props;
const { title } = Astro.props;
const { description } = Astro.props;
const { price } = Astro.props;

---

<div class="min-w-56 max-w-96 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
    <a href={url}>
        <img src={image} class="rounded-t-lg w-full" alt={Altimage}>
    </a>
    <div class="w-full h-auto px-5 py-5">
        <div class="inline-flex justify-center items-center">
            <div class="inline-flex items-center bg-gray-100 me-2 px-2.5 py-0.5 rounded-full dark:bg-gray-700">
                <svg class="w-4 h-4 mr-1 text-yellow-300" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 22 20">
                <path d="M20.924 7.625a1.523 1.523 0 0 0-1.238-1.044l-5.051-.734-2.259-4.577a1.534 1.534 0 0 0-2.752 0L7.365 5.847l-5.051.734A1.535 1.535 0 0 0 1.463 9.2l3.656 3.563-.863 5.031a1.532 1.532 0 0 0 2.226 1.616L11 17.033l4.518 2.375a1.534 1.534 0 0 0 2.226-1.617l-.863-5.03L20.537 9.2a1.523 1.523 0 0 0 .387-1.575Z"/>
                </svg>
                <p class="text-gray-800 text-xs font-medium mr-1 dark:text-gray-300">{rating} -</p>
                <a href={url}><p class="text-gray-900 text-xs font-medium underline dark:text-gray-300">{ratingComment}</p></a>
            </div>
        </div>
        <a href={url}>
            <h3 class="text-2xl mt-2 font-semibold tracking-tight text-gray-900 dark:text-white">{title}</h3>
            <p class="my-2 text-sm max-h-10 overflow-hidden font-medium text-gray-500 dark:text-gray-400">{description}</p>
            <div>
                <span class="text-40 font-normal mb-2 text-gray-900 dark:text-gray-200">Desde $</span>
                <span class="text-40 font-normal mb-2 text-gray-900 dark:text-gray-200">{price}</span>
                <span class="text-40 font-normal mb-2 text-gray-900 dark:text-gray-200">por persona</span>
            </div>
        </a>
        <div class="flex items-center justify-end mt-4">
            <a href={url} class="text-white w-full md:w-auto bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Más información</a>
        </div>
</div>
</div>