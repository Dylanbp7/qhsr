---
interface Props {
    opinionImage1: any;
    opinionPerson1: any;
    opinionDate1: any;
    opinionTitle1: any;
    opinionDescription1: any;
    opinionImage2: any;
    opinionPerson2: any;
    opinionDate2: any;
    opinionTitle2: any;
    opinionDescription2: any;
    opinionImage3: any;
    opinionPerson3: any;
    opinionDate3: any;
    opinionTitle3: any;
    opinionDescription3: any;
}
const { opinionImage1 } = Astro.props;
const { opinionPerson1 } = Astro.props;
const { opinionDate1 } = Astro.props;
const { opinionTitle1 } = Astro.props;
const { opinionDescription1 } = Astro.props;
const { opinionImage2 } = Astro.props;
const { opinionPerson2 } = Astro.props;
const { opinionDate2 } = Astro.props;
